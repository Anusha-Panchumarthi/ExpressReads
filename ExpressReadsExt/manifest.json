{
    "name": "ExpressReads",
    "description": "Obtain concise summaries at the touch of a button",
    "version": "1.0",
    "manifest_version": 3,
    "background": {
        "service_worker": "background.js"
    },
    "permissions": ["unlimitedStorage","scripting", "activeTab"],
    "action":{
        "default_popup": "popup.html",
        "default_title": "Click me to summarise text"
    }
}

